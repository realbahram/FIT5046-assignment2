<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF9E7">

    <TextView
        android:id="@+id/textviewQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_trigger"
        android:layout_centerVertical="true"
        android:layout_marginBottom="245dp"
        android:layout_centerInParent="true"
        android:text="Quote"
        android:textSize="24sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textviewQuote"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Welcome to Adventure Achiever"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/welcome_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_message"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="[Name]!"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync my goals"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>